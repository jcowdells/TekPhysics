#version 330 core

layout (location = 0) in vec2 position;
layout (location = 1) in vec2 v_texture_uv;

uniform mat4 projection;
uniform vec2 start_position;

out vec2 f_texture_uv;

void main() {
    gl_Position = projection * vec4(position.x + start_position.x, position.y + start_position.y, 0.0f, 1.0f);
    f_texture_uv = v_texture_uv;
}